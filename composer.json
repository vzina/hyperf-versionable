{
    "name": "vzina/hyperf-versionable",
    "description": "Make Laravel model versionable.",
    "require": {
        "php": "^8.1",
        "hyperf/db-connection": "~3.1.0",
        "jfcherng/php-diff": "^6.11",
        "doctrine/dbal": "^3.8|^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.5.3|^12.0",
        "orchestra/testbench": "^8.21|^10.0",
        "swoole/ide-helper": "~5.0",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "Vzina\\HyperfVersionable\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "./tests"
        }
    },
    "extra": {
        "hyperf": {
            "config": "Vzina\\HyperfVersionable\\ConfigProvider"
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "post-merge": "composer install",
        "cghooks": "vendor/bin/cghooks",
        "check-style": "vendor/bin/pint --test",
        "fix-style": "vendor/bin/pint",
        "test": "phpunit --colors"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    },
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
